<p id="notice"><%= notice %></p>

<h1><%= t('coin.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('links.description') %></th>
      <th><%= t('links.acronym') %></th>
      <th><%= t('links.url_image') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "30x30" %></td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('links.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('coin.add_new_coin'), new_coin_path %>
